@using DTO.Entity
@model List<GameRoomDTO>
<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">


    <style>
   .top-buffer { margin-top:0px; }


        .background{
            background-color: #6f42c4;    
        }

        .background1 {
            background-color: #198754;
        }

        .background2 {
            background-color: #fd7e14;
        }
    </style>
  
</head>

<body>


    <div class="container background">

        <div class="row gy-3" style="text-align:center">
            <div class="col" >
                <div class="p-3 border bg-light">
                    Все созданные приключения
                </div>
              
            </div>
        
        </div>
     
        <div class="row gy-5 top-buffer " style="text-align:center">
           
            @foreach (var item in Model)
            {
                <div class="col-sm-4">

                    <div class="p-2 border bg-light ">
                        <h4 class="title"> @Html.ActionLink( @item.GameRoomName,"GetGameRoom","GameRoom",new{@id = item.GameRoomId},new { @class = "menu-element" }) </h4>
                      
                    </div>


                </div>
            }
        </div>
        
        <div class="row gy-3" style="text-align:center">
            <div class="col">
                <div class="p-3 ">              
                </div>
            </div>

        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
</body>
</html>