@model GameClassViewModel

<head>

    <style>




    </style>
</head>

<body>
    @if (@Model.GameClassId == Guid.Empty)
    {

        <h1 style="text-align:center;font-weight: 400;">Add Class</h1>
        <hr />

    }
    else
    {
        <h1 style="text-align:center; font-weight: 400;"> Update Class</h1>
        <hr />
    }
    <div style="width:100%;">

        <form action="/GameClass/AddGameClass" method="post">
            <div style="text-align:center">
                <p>
                    <div>
                        <h5 style="font-weight: 400;">
                            Enter ClassName:
                        </h5>
                    </div>

                    @Html.TextBoxFor(x => x.GameClassName)
                    @Html.ValidationMessageFor(x=>x.GameClassName)
                </p>
                <p>
                    <div>
                        <h5 style="font-weight: 400;">
                            Enter Description Game Class:
                        </h5>

                    </div>

                    @Html.TextBoxFor(x => x.DescriptionGameClass)
                    @Html.ValidationMessageFor(x=>x.DescriptionGameClass)
                </p>


            </div>

            <div style="text-align:center;margin-bottom:20px;">
                <h5>Select GamingSystem</h5>

                <select name="GamingSystemId" id="AddGameClass">
                    @foreach (var item in Model.GamingSystemsDTO)
                    {
                        <option value="@item.GamingSystemDTOId">@item.GamingSystemDTOName</option>
                    }
                </select>

            </div>

            @Html.HiddenFor(x=>x.GameClassId)
            @if (@Model.GameClassId == Guid.Empty)
            {
                <div style="text-align:center">
                    <input type="submit" value="Add Class" />
                </div>
            }
            else
            {
                <div style="text-align:center">
                    <input type="submit" value="Update Game Class" />
                </div>
            }
        </form>


   
</body>